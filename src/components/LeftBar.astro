---
import BookmarkIcon from '@/components/icons/bookmark.astro';
import { ThemeToggle } from '@/components/react/ThemeToggle';

import smashingLogo from '../../public/logo.svg';
---

<div
  class="z-50 hidden h-full shrink-0 bg-zinc-50 pb-2 dark:bg-zinc-900 lg:sticky lg:top-0 lg:flex lg:w-16 lg:flex-col lg:items-center lg:whitespace-nowrap lg:rounded-3xl lg:rounded-br-none lg:border lg:border-y-0 lg:border-l-0 lg:pt-6 lg:text-sm lg:leading-7"
>
  <a class="flex items-center lg:[writing-mode:vertical-rl]" href="/">
    <img
      class="h-8 w-8"
      src={smashingLogo.src}
      alt="smashing.tools"
      sizes="(min-width: 1024px) 20rem, (min-width: 640px) 16rem, 12rem"
    />
    <span class="mt-6 font-mono font-semibold text-zinc-500"
      >smashing.<strong class="text-zinc-900 dark:text-zinc-400">tools</strong
      ></span
    >
  </a>
  <div class="flex grow"></div>
  <button class="flex h-11 w-11 items-center justify-center">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-5 w-5"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
      ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
        d="M12 5l0 14"></path><path d="M5 12l14 0"></path></svg
    >
  </button>
  <a href="/bookmarks" class="flex h-11 w-11 items-center justify-center">
    <BookmarkIcon />
  </a>
  <ThemeToggle client:only />
</div>
