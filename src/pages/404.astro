---
import BaseHead from '@/components/BaseHead.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '@/consts';
---

<html lang="en" data-pagefind-ignore>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body class="block">
    <main
      class="grid min-h-full place-items-center px-6 py-24 sm:py-32 lg:px-8"
    >
      <div class="text-center">
        <p class="text-base font-semibold text-zinc-600">404</p>
        <h1
          class="mt-4 text-3xl font-bold tracking-tight text-zinc-800 sm:text-5xl"
        >
          Page not found
        </h1>
        <p class="mt-6 text-base leading-7 text-zinc-600">
          Sorry, we couldn’t find the page you’re looking for.
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
          <a
            href="/"
            class="rounded-md bg-zinc-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-zinc-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-zinc-600"
            >Go back to tools</a
          >
        </div>
      </div>
    </main>
  </body>
</html>
