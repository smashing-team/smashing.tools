---
import { type CollectionEntry, getCollection } from 'astro:content';

import ToolLayout from '../../layouts/ToolLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('design');
  return posts.map((post, index) => ({
    params: { slug: post.slug },
    props: {
      ...post,
      prevSlug: posts[index - 1]?.slug,
      nextSlug: posts[index + 1]?.slug,
    },
  }));
}
type Props = CollectionEntry<'design'> & {
  prevSlug: CollectionEntry<'design'>['slug'];
  nextSlug: CollectionEntry<'design'>['slug'];
};

const post = Astro.props;
const { Content } = await post.render();
---

<ToolLayout
  {...post.data}
  slug={post.slug}
  collection="design"
  prevSlug={post.prevSlug}
  nextSlug={post.nextSlug}
>
  <Content />
</ToolLayout>
